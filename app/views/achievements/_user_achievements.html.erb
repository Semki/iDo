<% unless @user.nil? %>
  <h2>Achievements</h2>
  <div class="well" style="overflow: auto;">
    <% if @user.achievements.empty? %>
      <h4>You currently have no achievements.</h4>
      <h4>Why don't you submit your activity?</h4>
    <% else %>
      <% @user.achievements.each do |a| %>
        <div class='achievement-container'>
          <img src="/images/achievements/<%= a.picture_url %>" alt="<%= a.name %>" style="width:100px;height:100px">
          <p style="width: 112px; text-align: center;margin: 3px 0"><%= a.name %></p>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>
