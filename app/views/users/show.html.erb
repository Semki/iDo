<%= @user.name %>

<ul class="unstyled activity-list">
 
  <% last_user_activities(@user,20).each do |ra| %>
  <li>
    <img src="<%= ra[:user_picture] %>" alt="<%= ra[:user_name] %>" style="width:30px;height:30px" />
    <span><%= link_to ra[:user_name], user_path(3) %></span>
    <span> is now </span>
    <%= render :partial => 'activities/activity_with_picture', :locals => {:activity_id => ra[:activity_id]} %>
  </li>
  <% end %>
</ul>

