<h1>Registration</h1>

<%= form_tag('new_user', :method => 'post') do %>
  <%= label_tag :username, 'Username' %><br />
  <%= text_field_tag :username %><br />
  <%= label_tag :password, 'Password' %><br />
  <%= password_field_tag :password %><br />
  <%= label_tag :password_confirmation, 'Confirmation' %><br />
  <%= password_field_tag :password_confirmation %><br />
  <%= submit_tag 'Register' %>
<% end %>